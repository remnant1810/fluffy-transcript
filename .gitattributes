# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for all text files
* text eol=lf

# Force LF line endings for specific file types
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.html text eol=lf
*.css text eol=lf
*.md text eol=lf
*.py text eol=lf
*.txt text eol=lf

# Binary files should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.ttf binary
*.woff binary
*.woff2 binary
*.eot binary
*.otf binary
*.mp3 binary
*.wav binary
*.mp4 binary
*.webm binary
*.mov binary
*.mkv binary

# Explicitly declare files that should always be normalized and converted to LF
*.sh text eol=lf
*.bat text eol=lf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Denote all files that are truly binary and should not be modified
*.pdf -text
*.zip -text
*.gz -text
*.tar -text
*.7z -text
*.dmg -text
*.exe -text
*.dll -text
*.so -text
*.dylib -text
*.pdb -text
